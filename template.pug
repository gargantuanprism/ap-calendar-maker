doctype html

html
  head
    title= info.title
    link(rel='stylesheet' href='../style.css')
    link(rel="stylesheet" href="https://use.typekit.net/txn7htm.css")

  body
    #main
      each page in pages
        .title.bold= info.title

        .grid-container
          each e in page
            .grid-row(style='color: ' + e.color)
              .grid-item
                .small= e.dow
                .day.bold= e.day
              .grid-item
                if (e.svgIcon)
                  .icon(style='fill: ' + e.color + ' !important;') !{e.svgIcon}
                if (e.imageIcon)
                  img.icon(src=e.imageIcon)
              .grid-item.event-title
                .type.small= e.type

                if (e.size === info.minTitleSize)
                  div.spacer &nbsp;

                .name.bold(style='font-size: ' + e.size)= e.name

                if (e.subtitle)
                  .subtitle.bold(style='font-size: ' + e.size)= e.subtitle

              .grid-item.time.bold
                div= e.start
                div= e.end

        div &nbsp;

